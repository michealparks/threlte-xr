{
	"name": "threlte-xr",
	"version": "0.0.19",
	"license": "MIT",
	"scripts": {
		"start": "vite dev --host",
		"build": "vite build && npm run package",
		"preview": "vite preview --host",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"@threlte/core": "^6.0.0-next.10",
		"svelte": "^3.54.0",
		"three": "^0.153.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.21.0",
		"@sveltejs/package": "^2.1.0",
		"@threlte/core": "^6.0.0-next.10",
		"@threlte/extras": "^5.0.0-next.14",
		"@types/three": "^0.152.1",
		"autoprefixer": "^10.4.14",
		"postcss": "^8.4.24",
		"publint": "^0.1.15",
		"svelte": "^4.0.1",
		"svelte-check": "^3.4.4",
		"tailwindcss": "^3.3.2",
		"three": "^0.154.0",
		"three-inspect": "^0.3.4",
		"tslib": "^2.6.0",
		"typescript": "^5.1.6",
		"vite": "^4.3.9",
		"vite-plugin-mkcert": "^1.16.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
